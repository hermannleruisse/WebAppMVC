<section id="appointment" class="appointment section-bg">
    <div class="container">

        <div class="section-title">
            <h2>Make an Appointment</h2>
            <p>Magnam dolores commodi suscipit. Necessitatibus eius consequatur ex aliquid fuga eum quidem. Sit sint consectetur velit. Quisquam quos quisquam cupiditate. Et nemo qui impedit suscipit alias ea. Quia fugiat sit in iste officiis commodi quidem hic quas.</p>
        </div>

        @using (Html.BeginForm("Create", "Appointment", new { area = "ADMIN" }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-4 form-group">
                    @Html.TextBox("Nom", null, new { @class = "form-control", @placeholder = "Votre nom" })
                    @*<input type="text" name="name" class="form-control" id="name" placeholder="Your Name" data-rule="minlen:4" data-msg="Please enter at least 4 chars">*@
                    <div class="validate">@Html.ValidationMessage("Nom")</div>
                </div>
                <div class="col-md-4 form-group mt-3 mt-md-0">
                    @Html.TextBox("Email", null, new { @class = "form-control", @placeholder = "Votre email" })
                    @*<input type="email" class="form-control" name="email" id="email" placeholder="Your Email" data-rule="email" data-msg="Please enter a valid email">*@
                    <div class="validate">@Html.ValidationMessage("Email")</div>
                </div>
                <div class="col-md-4 form-group mt-3 mt-md-0">
                    @Html.TextBox("Telephone", null, new { @class = "form-control", @placeholder = "Votre téléphone" })
                    @*<input type="tel" class="form-control" name="phone" id="phone" placeholder="Your Phone" data-rule="minlen:4" data-msg="Please enter at least 4 chars">*@
                    <div class="validate">@Html.ValidationMessage("Telephone")</div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 form-group mt-3">
                    @Html.TextBox("Date", null, new { @class = "form-control", @type = "date", @placeholder = "Date du rendez-vous" })
                    @*<input type="datetime" name="date" class="form-control datepicker" id="date" placeholder="Appointment Date" data-rule="minlen:4" data-msg="Please enter at least 4 chars">*@
                    <div class="validate">@Html.ValidationMessage("Date")</div>
                </div>
                <div class="col-md-4 form-group mt-3">
                    @Html.DropDownList("Département", new SelectList(@Model.Departements, "Id", "Libelle"), "Choisir le département", new { @class = "form-control" })
                    @*<select name="department" id="department" class="form-select">
                            <option value="">Select Department</option>
                            <option value="Department 1">Department 1</option>
                            <option value="Department 2">Department 2</option>
                            <option value="Department 3">Department 3</option>
                        </select>*@
                    <div class="validate">@Html.ValidationMessage("Departement")</div>
                </div>
                <div class="col-md-4 form-group mt-3">
                    @Html.DropDownList("Docteur", new SelectList(@Model.Docteurs, "Id", "NomComplet"), "Choisir le spécialiste", new { @class = "form-control" })

                    @*<select name="doctor" id="doctor" class="form-select">
                            <option value="">Select Doctor</option>
                            <option value="Doctor 1">Doctor 1</option>
                            <option value="Doctor 2">Doctor 2</option>
                            <option value="Doctor 3">Doctor 3</option>
                        </select>*@
                    <div class="validate">@Html.ValidationMessage("Docteur")</div>
                </div>
            </div>

            <div class="form-group mt-3">
                @Html.TextArea("Message", new { @class = "form-control", @placeholder = "Message (Optionel)", @rows = "5" })
                @*<textarea class="form-control" name="message" rows="5" placeholder="Message (Optional)"></textarea>*@
                <div class="validate"></div>
            </div>
            <div class="mb-3">
                @*<div class="loading">Loading</div>
                    <div class="error-message"></div>*@
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-info alert-dismissible">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <strong>Info!</strong> @ViewBag.Message
                    </div>
                }
            </div>
            <div class="text-center"><button type="submit">Prendre un rendez-vous</button></div>

        }
    </div>
</section>
