@*@model WebAppMVC.DTO.CustomViewModel*@

<section id="contact" class="contact">
    <div class="container">

        <div class="section-title">
            <h2>Contact</h2>
            <p>Magnam dolores commodi suscipit. Necessitatibus eius consequatur ex aliquid fuga eum quidem. Sit sint consectetur velit. Quisquam quos quisquam cupiditate. Et nemo qui impedit suscipit alias ea. Quia fugiat sit in iste officiis commodi quidem hic quas.</p>
        </div>
    </div>

    <div>
        <iframe style="border:0; width: 100%; height: 350px;" src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12097.433213460943!2d-74.0062269!3d40.7101282!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xb89d1fe6bc499443!2sDowntown+Conference+Center!5e0!3m2!1smk!2sbg!4v1539943755621" frameborder="0" allowfullscreen></iframe>
    </div>

    <div class="container">
        <div class="row mt-5">

            <div class="col-lg-4">
                <div class="info">
                    <div class="address">
                        <i class="bi bi-geo-alt"></i>
                        <h4>Location:</h4>
                        <p>@Model.Adresse.Location</p>
                    </div>

                    <div class="email">
                        <i class="bi bi-envelope"></i>
                        <h4>Email:</h4>
                        <p>@Model.Adresse.Email</p>
                    </div>

                    <div class="phone">
                        <i class="bi bi-phone"></i>
                        <h4>Call:</h4>
                        <p>@Model.Adresse.Phone</p>
                    </div>

                </div>

            </div>

            <div class="col-lg-8 mt-5 mt-lg-0">
                
                @using (Html.BeginForm("Create", "Contact", new { area = "ADMIN" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-md-6 form-group">
                            @Html.TextBox("Nom", null, new { @class = "form-control", @placeholder = "Votre nom" })
                            @*@Html.TextBoxFor(x => x.Contact.Nom, new { @class = "form-control", @placeholder = "Votre nom" })*@
                            @Html.ValidationMessage("Nom")
                        </div>
                        <div class="col-md-6 form-group mt-3 mt-md-0">
                            @Html.TextBox("Email", null, new { @class = "form-control", @placeholder = "Votre email" })
                            @Html.ValidationMessage("Email")
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        @Html.TextBox("Objet", null, new { @class = "form-control", @placeholder = "Objet" })
                        @Html.ValidationMessage("Objet")
                    </div>
                    <div class="form-group mt-3">
                        @Html.TextArea("Message", new { @class = "form-control", @placeholder = "Message", @rows = "5" })
                        @Html.ValidationMessage("Message")
                    </div>

                    <div class="my-3">
                        @if (ViewBag.Message != null)
                        {
                            <div class="alert alert-info alert-dismissible">
                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                <strong>Info!</strong> @ViewBag.Message
                            </div>
                        }
                    </div>
                    <div class="text-center"><button type="submit">Envoyer Message</button></div>
                }

                @*<form action="forms/contact.php" method="post" role="form" class="php-email-form">
                        <div class="row">
